<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table>
  <thead>
    <tr>
      <th>Typ sali</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_user.admin==true %>
      <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= link_to 'Pokaż', type %></td>
            <td><%= link_to 'Edytuj', edit_type_path(type) %></td>
            <td><%= link_to 'Usuń', type, method: :delete, data: { confirm: 'Usunąć?' } %></td>
          </tr>
      <% end %>
  <% else %>
      <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= link_to 'Pokaż', type %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

