<!DOCTYPE html>
<html>
<head>
  <title>Rezerwacja sal</title>
  <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <%= value %>
    </div>
<% end %>

<% if current_user%>
    <% if current_user.admin==true %>
        Witaj <%= current_user.email %>
        <%= link_to "Rezerwacje", reservations_path, :method => :get %>
        <%= link_to "Budynki", builds_path, :method => :get %>
        <%= link_to "Sale", rooms_path, :method => :get %>
        <%= link_to "Typy sal", types_path, :method => :get %>
        <%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %>

    <% else %>
        Witaj <%= current_user.email %>
        <%= link_to "Rezerwacje", reservations_path, :method => :get %>
        <%= link_to "Budynki", builds_path, :method => :get %>
        <%= link_to "Sale", rooms_path, :method => :get %>
        <%= link_to "Typy sal", types_path, :method => :get %>
        <%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %>
    <% end %>

<% else %>
    <%= link_to 'Zaloguj się', new_user_session_path %></br>
<% end %>


<%= yield %>

</body>
</html>